#!/usr/bin/env bash
# Create a script to install and configure HAProxy on 211092-lb-01 server
# Configure HAProxy to send traffic to 211092-web-01 and 211092-web-02 servers
# Distribute requests using a roundrobin algorithm
# Make sure that HAProxy can be managed via an init script
# Install and configure HAproxy on my 211092-lb-01 server.
sudo apt-get -y update
apt-get -y install haproxy

# edit config file
server_config=\
"
frontend  opius2007-frontend
        bind *:80
        mode http
        default_backend opius2007-backend
backend opius2007-backend
        balance roundrobin
        server 211092-web-01 54.224.23.196:80 check
        server 211092-web-02 54.166.137.26:80 check
"
echo "$server_config" | sudo tee -a /etc/haproxy/haproxy.cfg

# enable haproxy to be started by init script

echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

sudo service haproxy restart
